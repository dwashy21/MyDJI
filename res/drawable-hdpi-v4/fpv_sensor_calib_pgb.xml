<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sensor_calib_corner_radius" />
            <stroke android:width="1.0px" android:color="@color/fpv_video_bg" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <stroke android:width="@dimen/battery_pgb_gap" android:color="@android:color/transparent" />
                <corners android:radius="@dimen/sensor_calib_corner_radius" />
                <solid android:color="@color/fpv_video_progress" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <stroke android:width="@dimen/battery_pgb_gap" android:color="@android:color/transparent" />
                <corners android:radius="@dimen/sensor_calib_corner_radius" />
                <solid android:color="@color/fpv_video_progress" />
            </shape>
        </clip>
    </item>
</layer-list>