                <TextView android:textSize="@dimen/txt_seven" android:id="@id/leftbar_spotlight_catch" android:text="@string/in2_gimbal_watch_composition" android:drawableTop="@drawable/leftbar_spotlight_catch" android:layout_weight="1.0" style="@style/in2_spotlight_leftbar_tv" />
            </LinearLayout>
        </LinearLayout>
