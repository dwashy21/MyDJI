            <TextView android:id="@id/leftbar_spotlight_more" android:background="@color/in2_spotlight_leftbar_bg" android:layout_marginBottom="@dimen/dp_3_in_sw320dp" android:text="@string/in2_gimbal_watch_setting" android:drawableTop="@drawable/leftbar_spotlight_more" style="@style/in2_spotlight_leftbar_tv" />
