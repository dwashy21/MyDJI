<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/setting_ui_progress_number" android:layout_width="@dimen/dp_25" android:layout_height="wrap_content" android:text="10" android:layout_weight="1.0" style="@style/setting_ui_common_txt" />
    <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="@dimen/dp_30" android:layout_height="wrap_content" android:animateLayoutChanges="true">
        <TextView android:id="@id/setting_ui_progress_left_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" style="@style/setting_ui_txt_small_gray" />
        <ImageView android:layout_gravity="center_vertical" android:id="@id/setting_ui_seekbar_sub" android:visibility="gone" android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:src="@drawable/setting_ui_seekbar_sub" android:layout_alignParentRight="true" />
    </RelativeLayout>
    <SeekBar android:layout_gravity="center_vertical" android:id="@id/setting_ui_progress_seekbar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="100" android:progress="10" android:minWidth="@dimen/dp_120" android:layout_weight="0.0" android:layout_centerVertical="true" style="@style/setting_ui_widget_seekbar" />
    <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="@dimen/dp_30" android:layout_height="wrap_content" android:animateLayoutChanges="true">
        <ImageView android:layout_gravity="center_vertical" android:id="@id/setting_ui_seekbar_add" android:visibility="gone" android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:src="@drawable/setting_ui_seekbar_add" android:layout_alignParentLeft="true" />
        <TextView android:id="@id/setting_ui_progress_right_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100" android:layout_alignParentLeft="true" style="@style/setting_ui_txt_small_gray" />
    </RelativeLayout>
</LinearLayout>