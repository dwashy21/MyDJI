<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/setting_ui_item"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" style="@style/setting_ui_item">
        <TextView android:id="@id/setting_ui_item_title" android:text="@string/setting_ui_gimbal_config" style="@style/setting_ui_item_title" />
        <dji.setting.ui.widget.DJISpinnerButton android:id="@id/setting_ui_gimbal_config" android:text="usa" style="@style/setting_ui_item_spinner_btn" />
    </LinearLayout>
    <LinearLayout style="@style/setting_ui_item">
        <TextView android:text="@string/setting_ui_gimbal_pitch" style="@style/setting_ui_item_title" />
        <dji.setting.ui.widget.DJINumberProgress android:id="@id/setting_ui_gimbal_pitch" android:layout_width="@dimen/setting_ui_progress_common_width" android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout style="@style/setting_ui_item">
        <TextView android:text="@string/setting_ui_gimbal_yaw" style="@style/setting_ui_item_title" />
        <dji.setting.ui.widget.DJINumberProgress android:id="@id/setting_ui_gimbal_yaw" android:layout_width="@dimen/setting_ui_progress_common_width" android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout android:id="@id/setting_ui_gimbal_pitch_time_ly" style="@style/setting_ui_item">
        <TextView android:text="@string/setting_ui_gimbal_pitch_time" style="@style/setting_ui_item_title" />
        <dji.setting.ui.widget.DJINumberProgress android:id="@id/setting_ui_gimbal_pitch_time" android:layout_width="@dimen/setting_ui_progress_common_width" android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout android:id="@id/setting_ui_gimbal_yaw_time_ly" style="@style/setting_ui_item">
        <TextView android:text="@string/setting_ui_gimbal_yaw_time" style="@style/setting_ui_item_title" />
        <dji.setting.ui.widget.DJINumberProgress android:id="@id/setting_ui_gimbal_yaw_time" android:layout_width="@dimen/setting_ui_progress_common_width" android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" style="@style/setting_ui_item">
        <Button android:id="@id/setting_ui_item_btn" android:text="@string/setting_ui_flyc_resetall" style="@style/setting_ui_item_btn_big" />
    </LinearLayout>
</LinearLayout>